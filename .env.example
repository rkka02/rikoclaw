# === Discord ===
DISCORD_TOKEN=your-bot-token-here
OWNER_ID=123456789012345678
ALLOWED_USER_IDS=
ALLOWED_CHANNEL_IDS=
DISCORD_MESSAGE_CONTENT_INTENT=false

# === Claude Code CLI ===
CLAUDE_PATH=claude
CLAUDE_TIMEOUT=120
CLAUDE_MODEL=
# 0 or empty = CLI default(사실상 제한 없음), 양수 = 강제 제한
CLAUDE_MAX_TURNS=0
# MCP 도구(브라우저 등) 사용하려면 true 필수
CLAUDE_DANGEROUSLY_SKIP_PERMISSIONS=true
CLAUDE_PERMISSION_MODE=bypassPermissions
# comma-separated. ex) C:\rkka_Projects,C:\Users\mw
CLAUDE_ADD_DIRS=
# Turn-scoped attachment bridge folders (agent->user / user->agent)
CLAUDE_OUTPUT_DIR=./data/output
CLAUDE_INPUT_DIR=./data/input

# === 기능 ===
ENABLE_MENTION_RESPONSE=true
REQUIRE_MENTION=true
MAX_QUEUE_SIZE=10
# 동시에 실행할 최대 작업 수 (스레드별 병렬 처리)
MAX_CONCURRENT_RUNS=2
PERSONAS_DIR=./.runtime/personas
ENABLE_LIVE_UPDATES=true

# === OpenAI Codex CLI ===
CODEX_ENABLED=false
CODEX_PATH=codex
CODEX_TIMEOUT=120
CODEX_MODEL=
# Codex에 웹검색 도구를 기본으로 켤지 여부 (성능/지연에 영향 큼)
CODEX_ENABLE_SEARCH=false

# === PTY Relay (iOS 터미널 연결) ===
PTY_RELAY_ENABLED=false
PTY_RELAY_PORT=7681
PTY_RELAY_TOKEN=
PTY_RELAY_ORPHAN_TIMEOUT=1800
PTY_RELAY_MAX_SESSIONS=5

# === Self Restart (macOS launchctl) ===
SELF_RESTART_ENABLED=false
# 재시작 후 봇 프로세스를 다시 띄우는 명령 (launchctl에서 실행됨)
SELF_RESTART_COMMAND=cd "<project-root>" && npm start
SELF_RESTART_DELAY_SEC=3
SELF_RESTART_MAX_PENDING_MINUTES=60
SELF_RESTART_LAUNCH_LABEL=com.rikoclaw.self-restart

# === Mecho Memory (optional) ===
MECHO_ENABLED=false
MECHO_API_URL=http://127.0.0.1:3100
MECHO_TIMEOUT_MS=3000
MECHO_DEFAULT_MODE_ID=default
OLLAMA_URL=http://127.0.0.1:11434
OLLAMA_EMBED_MODEL=qwen3-embedding:4b
OLLAMA_TIMEOUT_MS=15000

# === 로깅 ===
LOG_LEVEL=info
